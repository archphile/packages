# Maintainer: Tux <info@archphile.org>
# Website: http://archphile.org
# Based on ffmpeg-headless from AUR
# $Id: PKGBUILD 228056 2014-12-26 11:57:24Z bpiotrowski $
# Maintainer:  Ionut Biru <ibiru@archlinux.org>
# Maintainer:  Bart≈Çomiej Piotrowski <bpiotrowski@archlinux.org>
# Contributor: Tom Newsom <Jeepster@gmx.co.uk>
# Contributor: Paul Mattal <paul@archlinux.org>

# ALARM: Kevin Mihelich <kevin@archlinuxarm.org>
#  - use -fPIC in host cflags for armv7 to fix print_options.c compile

_pkgname=ffmpeg
pkgname=ffmpeg-archphile
pkgver=3.0
pkgrel=1
epoch=1
pkgdesc='Complete solution to record, convert and stream audio and video; optimised for server (headless) systems'
arch=('i686' 'x86_64' 'armv7h')
url='http://ffmpeg.org/'
license=('GPL3') #enabling libfdk_aac makes ffmpeg incompatible with the GPL!
depends=('bzip2' gnutls' 'lame' 
         'libmodplug' 'libtheora'  'opencore-amr'
         'zlib' 'libvorbis.so' 'libfdk-aac' 'rtmpdump')
optdepends=('libdcadec.so')
makedepends=('hardening-wrapper' 'yasm')
provides=('libavcodec.so' 'libavdevice.so' 'libavformat.so'
          'libavresample.so' 'libavutil.so' 'libpostproc.so' 'libswresample.so'
          'libswscale.so' "ffmpeg=${pkgver}")
conflicts=('ffmpeg')
replaces=('ffmpeg')
source=(http://ffmpeg.org/releases/${_pkgname}-${pkgver}.tar.bz2)
sha256sums=('f19ff77a2f7f736a41dd1499eef4784bf3cb7461f07c13a268164823590113c0')

build() {
  cd ${_pkgname}-${pkgver}

  ./configure \
    	--prefix='/usr' \
    	--disable-debug \
    	--disable-static \
    	--disable-stripping \
	--disable-fontconfig \
	--disable-libx264 \
    	--disable-libx265 \
	--disable-libvpx \
	--disable-encoders \
	--disable-libvidstab \
	--disable-libbluray \
	--disable-libass \
	--disable-avfilter \
	--disable-libfribidi \
	--disable-libgsm \
	--disable-libopus \
	--disable-libfreetype \
	--disable-libspeex \
	--disable-libopenjpeg \
	--disable-libv4l2 \
	--disable-libxvid \
	--disable-libwebp \
	--disable-libschroedinger \
	--disable-libdcadec \
	--enable-decoders \
    	--enable-avisynth \
    	--enable-avresample \
    	--enable-gnutls \
    	--enable-gpl \ 
    	--enable-libmodplug \
    	--enable-libmp3lame \
    	--enable-libopencore_amrnb \
    	--enable-libopencore_amrwb \
    	--enable-libtheora \
    	--enable-libvorbis \ 
    	--enable-shared \
    	--enable-version3 \
    	--enable-librtmp \
    	--enable-runtime-cpudetect \
    	--enable-libfdk_aac \
    	--enable-nonfree

  make
  make doc/ff{mpeg,play,server}.1
}

package() {
  cd ${_pkgname}-${pkgver}
  make DESTDIR="${pkgdir}" install install-man
}
