# Maintainer: Philippe Mongeau <ph.mongeau@gmail.com>

pkgname=mympd-archphile
_pkgname=myMPD
pkgver=5.5.3
pkgrel=1
pkgdesc="myMPD is a standalone and mobile friendly web mpdclient."
arch=('armv7h' 'aarch64')
url="http://github.org/jcorporation/myMPD"
license=('GPL')
depends=('libmpdclient' 'openssl')
makedepends=('cmake')
optdepends=('libmediainfo')
provides=()
conflicts=()
replaces=()
install=mympd-archphile.install
source=("https://github.com/jcorporation/${_pkgname}/archive/v${pkgver}.tar.gz"
        "mympd.conf")
sha256sums=('48009064371a03ad9bd97caff08b5e3f4642ff4008814c860e343a0a79b4962a'
            '2cded5e88f6dcc97ad6aea664c90dc84a2b23c99de4a96ffbabcb70b4c2eb7a9')

build() {
  if [ -d "${srcdir}/${_pkgname}-${pkgver}" ]
  then
    cd "${srcdir}/${_pkgname}-${pkgver}" || exit 1
  else
    cd "${srcdir}" || exit 1
  fi
  export ARCHLINUX=true
  install -d release
  cd release || exit 1
  cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr -DCMAKE_BUILD_TYPE=RELEASE ..
  make
}

package() {
  if [ -d "${srcdir}/${_pkgname}-${pkgver}/release" ]
  then
    cd "${srcdir}/${_pkgname}-${pkgver}/release"
  else
    cd "${srcdir}/release"
  fi
  make DESTDIR="$pkgdir/" install

  install -Dm644  "$pkgdir/usr/share/webapps/mympd/mympd.service" "$pkgdir/usr/lib/systemd/system/mympd.service"
  install -Dm644  ../../../mympd.conf "$pkgdir/etc/webapps/mympd/mympd.conf" 

## Mympd Settings (alternative to mympd.conf)
#  echo -n "#FFF" > "$pkgdir/var/lib/mympd/state/bg_color"
#  echo -n "true" > "$pkgdir/var/lib/mympd/state/coverimage"
#  echo -n "Folder.jpg" > "$pkgdir/var/lib/mympd/state/coverimage_name"
#  echo -n "240" > "$pkgdir/var/lib/mympd/state/coverimage_size"
#  echo -n "/var/lib/mpd/music" > "$pkgdir/var/lib/mympd/state/music_directory"
#  chown mympd:mympd "$pkgdir/var/lib/mympd/state/*"
#  chmod 600 "$pkgdir/var/lib/mympd/state/*"
}
