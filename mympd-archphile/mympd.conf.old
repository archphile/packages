#myMPD config file

[mpd]
#Connection to mpd
host = 127.0.0.1
port = 6600
#pass = 

#absolute path of music_directory of mpd
#none = no local music_directory
#auto = get music_directory from mpd (only support, if connected to mpd socket)
#fallback: /var/lib/mpd/music
musicdirectory = auto
musicdirectory = /var/lib/mpd/music

[webserver]
#Webserver options
#webport = 80

#Port for mpd http stream
#streamport = 8000

#Enable ssl
ssl = false
sslport = 443


[mympd]
#Loglevel
#0 = quiet
#1 = default
#2 = verbose
#3 = debug
loglevel = 3

#myMPD user
user = mympd

#Enable system commands defined in syscmds section
syscmds = false


#Enable local player, needs streamport or streamurl setting
localplayer = false

#Enable mixramp settings
mixramp = false

#Enable usage of mpd stickers for play statistics and voting
stickers = true

[plugins]
coverextract = @COVEREXTRACT@


[theme]
bgcover = false
bgcssfilter = blur(5px)
bgcolor = #FFF


#Name for coverimages
coverimagename = Folder.jpg

#Size for coverimage in px
coverimagesize = 240

[plugins]
coverextract = @COVEREXTRACT@


[syscmds]
Shutdown = sudo /sbin/halt
#To use this command add following lines to /etc/sudoers (without #)
#Cmnd_Alias MYMPD_CMDS = /sbin/halt
#mympd ALL=NOPASSWD: MYMPD_CMDS