# Maintainer: Tux <info@archphile.org>
# Website: http://archphile.org
# Based on libupnpp-git from AUR 

pkgname=libupnpp-archphile
_pkgname=libupnpp
pkgver=20141016
pkgrel=3
pkgdesc="a C++ wrapper for libupnp - used with upmpdcli or upplay"
url="https://github.com/medoc92/libupnpp"
license=("GPL")
depends=('libupnp-archphile')
makedepends=('git' 'autoconf')
arch=('armv7h' 'aarch64')

source=("git://github.com/medoc92/libupnpp.git")
md5sums=('SKIP')

build() {

  cd ${srcdir}/${_pkgname}
  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd ${srcdir}/${_pkgname}
  make DESTDIR="${pkgdir}/" install
}
